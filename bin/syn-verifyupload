#!/bin/bash
# Paul Tagliamonte, GPLv3, 2011
echo "verifying sig"

MDFIVE=`ls *.sigs 2>/dev/null`

if [ "x$MDFIVE" == "x" ]; then
	echo "No sig file. Aborting"
	exit 3
fi

gpg --verify $MDFIVE

if [ $? -ne 0 ]; then
	echo "INVALID GPG SIG"
	exit 1
fi

gpg --decrypt $MDFIVE > .verify
md5sum -c .verify

if [ $? -ne 0 ]; then
	echo "INVALID MD5SUMS"
	exit 2
fi

echo "All clear. Nice."

exit 0
